{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "next build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    {
      "source": "/documentation",
      "destination": "https://boiler-docs-ten.vercel.app/introduction"
    },
    {
      "source": "/documentation/:path*",
      "destination": "https://boiler-docs-ten.vercel.app/introduction/:path*"
    }
  ],

  "redirects": [
    {
      "source": "/docs",
      "destination": "/documentation",
      "permanent": true
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    }
  ]
}
